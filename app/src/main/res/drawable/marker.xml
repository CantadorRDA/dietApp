<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="30dp"
        android:top="38dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <size
                    android:width="30dp"
                    android:height="30dp"/>
                <solid
                    android:color="@color/colorAccent"/>
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="8dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp"/>
            <solid android:color="?attr/colorAccent"/>
        </shape>
    </item>

</layer-list>